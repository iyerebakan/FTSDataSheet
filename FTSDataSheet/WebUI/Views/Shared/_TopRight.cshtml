


@if (User.Identity.IsAuthenticated)
{
    <div id="hide-menu" class="btn-header pull-right">
        <span>
            <a href="javascript:void(0);" data-action="toggleMenu" title="Collapse Menu"
               onclick='$("body").toggleClass("hidden-menu")'><i class="fa fa-reorder"></i></a>
        </span>
    </div>

    <!-- logout button -->
    <div id="logout" class="btn-header transparent pull-right">
        <span> <a href="@Url.Action("Logout", "Auth")" title="Sign Out" data-action="userLogout" data-logout-msg="You can improve your security further after logging out by closing this opened browser"><i class="fa fa-sign-out"></i></a> </span>
    </div>
    <!-- end logout button -->
}
